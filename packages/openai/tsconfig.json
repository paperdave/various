{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "composite": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@paperdave/openai": ["src/index.ts"]
    },
    "target": "ESNext"
  },
  "include": ["src/"],
  "exclude": ["**/*.test.ts", "**/*.tsx"]
}
