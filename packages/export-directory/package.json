    "@types/picomatch": "^2.3.0",
    "@types/yargs": "^17.0.13",
    "bun-types": "^0.1.2",
    "esbuild": "^0.14.49",
    "mitata": "^0.1.6",
    "rollup": "^2.78.1",
    "rollup-plugin-add-shebang": "^0.3.1",
    "rollup-plugin-all-external": "workspace:^1.1.0",
