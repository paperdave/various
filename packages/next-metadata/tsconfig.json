{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "composite": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "src/"
  },
  "include": ["src/"],
  "exclude": ["**/*.test.ts", "**/*.tsx"]
}
